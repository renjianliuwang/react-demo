{
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6","dom"],
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src", "global.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
